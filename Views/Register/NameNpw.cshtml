<h1 class="text-center">Please input your username and password</h1>

@model User
<form asp-controller="Register" asp-action="Registration" method="POST">
  <div class="form-group">
    <label asp-for="Name">UserName</label>
    <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
    <input asp-for="Name" class="form-control" />
  </div>


  <div class="form-group">
    <label asp-for="Password"></label>
    <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
    <input asp-for="Password" class="form-control" value="" />
 
  </div>

  <div class="form-group">
    <label asp-for="Confirm"></label>
    <span asp-validation-for="Confirm" class="text-danger font-weight-bold"></span>
    <input asp-for="Confirm" class="form-control" value="" />
  </div>
 <div class="form-group">
         <label asp-for="Gender">Choose your gender</label>
    <span asp-validation-for="Gender" class="text-danger font-weight-bold"></span>

      <select asp-for="Gender">
        <option value="M">Male</option>
        <option value="F">Female</option>
        <option value="O">Others</option>
    </select>
 </div>
  <div class="form-group">
         <label asp-for="Zip">Input your Zip Code(5 digits):</label>
    <span asp-validation-for="Zip" class="text-danger font-weight-bold"></span>

      <input asp-for="Zip">
 </div>
  <button class="btn btn-outline-primary">Register</button>
</form>